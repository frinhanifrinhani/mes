<script>

    function marcarParticipante(cod_participante) {
        var codParticipante = cod_participante.value;

        var editar = document.getElementById('editar-btn');
        var excluir = document.getElementById('excluir-btn');

        editar.removeAttribute('disabled');
        excluir.removeAttribute('disabled');

        editar.setAttribute('href', 'participante-editar/' + codParticipante);
        excluir.setAttribute('href', 'participante-excluir/' + codParticipante);

    }

</script>