                nome_sprint_backlog: {
                    required: true,
                },
                tempo_sprint_backlog: {
                    required: true,
                },
                cod_participante: {
                    required: true,
                },
            },
            // Define as mensagens de erro para cada regra
            messages: {
                cod_product_backlog: {
                    required: "Campo Product Backlog não pode ser vazio!",
