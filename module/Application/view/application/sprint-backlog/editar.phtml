                nome_sprint_backlog: {
                    required: "Campo Nome da Sprint Backlog não pode ser vazio!",
                },
                tempo_sprint_backlog: {
                    required: "Campo Tempo de duração  não pode ser vazio!",
                },
                cod_participante: {
                    required: "Campo Atribuido para, não pode ser vazio!",
