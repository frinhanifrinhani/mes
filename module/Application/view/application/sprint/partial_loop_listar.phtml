    function marcarSprint(cod_sprint) {
        var codSprint = cod_sprint.value;

        var editar = document.getElementById('editar-btn');
        var excluir = document.getElementById('excluir-btn');

        editar.removeAttribute('disabled');
        excluir.removeAttribute('disabled');

        editar.setAttribute('href', 'sprint-editar/' + codSprint);
        excluir.setAttribute('href', 'sprint-excluir/' + codSprint);

    }

